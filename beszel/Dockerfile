FROM henrygd/beszel:latest

# ============================================
# 环境变量配置
# ============================================
ENV USER_EMAIL=ailuoga166@gmail.com \
    USER_PASSWORD=ailuoga166@gmail.com

# ============================================
# 端口暴露
# ============================================
EXPOSE 8090

# ============================================
# 健康检查
# ============================================
HEALTHCHECK --interval=30s --timeout=5s --retries=3 --start-period=10s \
    CMD ["/beszel", "health", "--url", "http://127.0.0.1:8090"]
